# MongoDB Configuration
# Get this from MongoDB Atlas: https://cloud.mongodb.com
#MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Google OAuth (Optional - only if using Google login)
# Get from: https://console.cloud.google.com/apis/credentials
OAUTH_CLIENT_ID=your_google_client_id_here
OAUTH_CLIENT_SECRET=your_google_client_secret_here

# Security
# Generate a secure random string: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_very_long_and_secure_secret_key_here

# CORS - Frontend URLs
# Add your production frontend URL here
FRONTEND_URL=https://your-app.vercel.app

# Session Configuration
SESSION_EXPIRY_DAYS=7

# Environment
ENVIRONMENT=development
# Options: development, production
