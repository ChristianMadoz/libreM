{
    "builds": [
        {
            "src": "api/server.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        },
        {
            "src": "favicon.ico",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/server.py"
        },
        {
            "source": "/((?!api|static|favicon.ico|logo.*|manifest.json|asset-manifest.json|robots.txt).*)",
            "destination": "/index.html"
        }
    ]
}